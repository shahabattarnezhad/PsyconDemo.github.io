
@{
    ViewData["Title"] = "ReportDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Details of Selected Row</h1>
            <p class="lead">Full details of the selected row is accessable here.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="inputEmail4">Doctor's Name</label>
                        <input type="text" disabled class="form-control" placeholder="Dr. Farahani" id="inputEmail4">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputPassword4">Report's Date</label>
                        <input type="password" class="form-control" disabled placeholder="8th Oct. 2020" id="inputPassword4">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="inputAddress">Test's Date</label>
                        <input type="text" class="form-control" id="inputAddress" disabled placeholder="8th Oct. 2020">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputCity">Report</label>
                        <textarea rows="8" type="text" disabled placeholder="This patient has Bipolar and Borderline disorder, Antisocial and Narcisstic disorder. For Treatment phase Insight Therapy plus brief psycho analysis plus medical." class="form-control" id="inputCity"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="inputCity">Description</label>
                        <textarea rows="8" type="text" disabled placeholder="In addition the patient needs to follow-up for depression phase." class="form-control" id="inputCity"></textarea>
                    </div>
                </div>
                <button asp-action="Profile" class="btn btn-warning">Back to Medical Records</button> |
                <button asp-action="Reports" class="btn btn-primary">Back to Reports List</button>
            </form>
        </div>
    </div>
</div>

